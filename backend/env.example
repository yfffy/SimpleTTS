# Authentication
AUTH_USERNAME=admin
AUTH_PASSWORD=your_secure_password_here

# File retention and limits
MAX_FILE_AGE_DAYS=7
MAX_FILE_SIZE_MB=10
MAX_TEXT_LENGTH=10000

# Directories
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
TEMP_DIR=temp

# API settings
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["*"]

# Rate limiting
UPLOAD_RATE_LIMIT=10/minute
TTS_RATE_LIMIT=30/minute
BATCH_RATE_LIMIT=5/minute

# TTS settings
DEFAULT_VOICE=en-US-AndrewNeural
VOICES_CACHE_TTL=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cleanup settings
CLEANUP_INTERVAL_HOURS=24 